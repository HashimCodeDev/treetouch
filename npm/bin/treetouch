#!/bin/sh
basedir=$(dirname "$0")

# Call the downloaded binary
if [ -x "$basedir/treetouch-bin" ]; then
    exec "$basedir/treetouch-bin" "$@"
elif [ -x "$basedir/treetouch-bin.exe" ]; then
    exec "$basedir/treetouch-bin.exe" "$@"
else
    echo "Error: treetouch binary not found. Reinstall with: pnpm install -g treetouch"
    exit 1
fi
